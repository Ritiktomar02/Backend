<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body class="bg-zinc-900 text-white">
    <div class="min-h-screen w-full px-6 py-10">

        <div class="max-w-6xl mx-auto">

            <form class="bg-zinc-800 p-8 rounded-2xl shadow-lg mb-12" method="Post" action="/form-data">
                <h1 class="font-bold text-3xl text-center mb-6">Notes App</h1>

                <input type="text" placeholder="Enter Heading" name="title"
                    class="block w-full mb-4 px-5 py-3 rounded-xl bg-zinc-700 outline-none focus:ring-2 focus:ring-zinc-500" />

                <textarea placeholder="Enter Detail" name="description" rows="4"
                    class="block w-full px-5 py-3 rounded-xl bg-zinc-700 outline-none resize-none focus:ring-2 focus:ring-zinc-500"></textarea>

                <button
                    class="mt-6 w-full bg-white text-black font-semibold py-3 rounded-xl hover:bg-zinc-200 transition">
                    Add Note
                </button>
            </form>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

  <% if (files.length > 0) { %>
    <% files.forEach((file) => { %>
      <div class="bg-zinc-800 p-6 rounded-2xl shadow-md">
        <h2 class="text-xl font-semibold mb-2">
          <%= file.replace(".txt", "") %>
        </h2>
        <p class="text-sm text-zinc-300">
          <%= require("fs").readFileSync(`files/${file}`, "utf8") %>
        </p>
      </div>
    <% }) %>
  <% } else { %>
    <h2 class="text-xl font-semibold text-zinc-400">No task yet</h2>
  <% } %>

</div>

        </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>

</html>